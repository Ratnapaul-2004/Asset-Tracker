<%- include('../partials/header') %>

<div class="d-flex justify-content-end p-3">
  <div class="form-check form-switch">
    <input class="form-check-input" type="checkbox" id="darkModeToggle">
      <label class="form-check-label" for="darkModeToggle">ğŸŒ™ Dark Mode</label>
  </div>
</div>

<div class="container py-5">
  <div class="text-center mb-5">
    <h1 class="fw-bold text-primary">ğŸ“Š Dashboard</h1>
    <p class="text-muted">Welcome, <strong><%= user ? user.name : 'Guest' %></strong>!</p>
  </div>

  <!-- Top Cards: Total Assets & Users -->
  <div class="row g-4 justify-content-center mb-4">
    <div class="col-md-4 col-sm-6">
      <div class="card shadow-lg border-0 text-center">
        <div class="card-body">
          <h5 class="card-title text-success fw-semibold">Assets</h5>
          <h2 class="display-6"><%= totalAssets %></h2>
        </div>
      </div>
    </div>

    <div class="col-md-4 col-sm-6">
      <div class="card shadow-lg border-0 text-center">
        <div class="card-body">
          <h5 class="card-title text-info fw-semibold">Users</h5>
          <h2 class="display-6"><%= totalUsers %></h2>
        </div>
      </div>
    </div>
  </div>

  <!-- Action Buttons: Report, Add Asset, Manage Custodians -->
  <div class="row g-4 justify-content-center mb-5">
    <!-- Generate Report -->
    <div class="col-md-4">
      <div class="card h-100 border-0 shadow-lg bg-warning text-dark text-center">
        <div class="card-body d-flex flex-column justify-content-center align-items-center">
          <h5 class="card-title fw-bold mb-3">ğŸ“‘ Generate Report</h5>
          <a href="/asset/report" class="btn btn-dark">Generate</a>
        </div>
      </div>
    </div>

    <% if (user && user.role === 'admin') { %>
      <!-- Add New Asset -->
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-lg bg-primary text-white text-center">
          <div class="card-body d-flex flex-column justify-content-center align-items-center">
            <h5 class="card-title fw-bold mb-3">â• Add New Asset</h5>
            <a href="/asset/add" class="btn btn-light">Add Asset</a>
          </div>
        </div>
      </div>

      <!-- Manage Custodians -->
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-lg bg-success text-white text-center">
          <div class="card-body d-flex flex-column justify-content-center align-items-center">
            <h5 class="card-title fw-bold mb-3">ğŸ‘¥ Manage Custodians</h5>
            <a href="/custodians" class="btn btn-light">Manage</a>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <!-- View All Assets -->
  <div class="text-center mt-5">
    <a href="/asset" class="btn btn-outline-secondary btn-lg shadow-sm">ğŸ” View All Assets</a>
  </div>
</div>

<%- include('../partials/footer') %>