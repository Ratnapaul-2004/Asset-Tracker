<%- include('../partials/header') %>

<div class="container mt-4">
  <h2>ðŸ“· Scan Asset QR Code</h2>
  <div id="qr-reader" style="width: 400px;"></div>
  <div id="qr-result" class="mt-3 text-success"></div>

  <a href="/asset" class="btn btn-secondary mt-4">Back to Assets</a>
</div>

<script src="https://unpkg.com/html5-qrcode"></script>
<script>
  const qrReader = new Html5Qrcode("qr-reader");
  qrReader.start(
    { facingMode: "environment" },
    {
      fps: 10,
      qrbox: 250
    },
    qrCodeMessage => {
      console.log("âœ… Scanned:", qrCodeMessage);
      document.getElementById("qr-result").innerHTML = `Redirecting to: ${qrCodeMessage}`;
      setTimeout(() => {
        window.location.href = qrCodeMessage;
      }, 1000);
    },
    errorMessage => {
      console.warn("âš ï¸ QR scan error:", errorMessage);
    }
  ).catch(err => {
    console.error("QR scanner failed:", err);
  });
</script>

