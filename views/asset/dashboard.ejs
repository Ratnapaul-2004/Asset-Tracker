<%- include('../partials/header') %>

<div class="d-flex justify-content-end p-3">
  <div class="form-check form-switch">
    <input class="form-check-input" type="checkbox" id="darkModeToggle" <%= session.darkMode ? 'checked' : '' %>>
      <label class="form-check-label" for="darkModeToggle">ðŸŒ™</label>
  </div>
</div>

<div class="container py-5">
  <div class="text-center mb-5">
    <h1 class="fw-bold text-primary">Dashboard</h1>
    <p class="text-muted">Welcome, <strong><%= user ? user.name : 'Guest' %></strong>!</p>
  </div>

  <!-- Top Cards: Total Assets & Users -->
  <div class="row g-4 justify-content-center mb-4">
    <div class="col-md-4 col-sm-6">
      <a href="/asset" class="text-decoration-none">
        <div class="card shadow-lg border-0 text-center">
          <div class="card-body">
            <h5 class="card-title text-success fw-semibold">Assets</h5>
            <h2 class="display-6"><%= totalAssets %></h2>
          </div>
        </div>
      </a>
    </div>

    <%= if(user && user.role === 'admin') { %>
      <div class="col-md-4 col-sm-6">
        <a href="/users" class="text-decoration-none">
          <div class="card shadow-lg border-0 text-center">
            <div class="card-body">
              <h5 class="card-title text-info fw-semibold">Users</h5>
              <h2 class="display-6"><%= totalUsers %></h2>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>

  <!-- Action Buttons: Report, Add Asset, Manage Custodians -->
  <div class="row g-4 justify-content-center mb-5">
    <!-- Generate Report -->
    <div class="col-md-4">
      <div class="card h-100 border-0 shadow-lg bg-warning text-dark text-center">
        <div class="card-body d-flex flex-column justify-content-center align-items-center">
          <h5 class="card-title fw-bold mb-3">Report</h5>
          <a href="/asset/report" class="btn btn-dark">Generate ðŸ“‘</a>
        </div>
      </div>
    </div>

    <% if (user && user.role === 'admin') { %>
      <!-- Add New Asset -->
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-lg bg-primary text-white text-center">
          <div class="card-body d-flex flex-column justify-content-center align-items-center">
            <h5 class="card-title fw-bold mb-3">New Asset</h5>
            <a href="/asset/add" class="btn btn-light">âž• Add</a>
          </div>
        </div>
      </div>

      <!-- Manage Custodians -->
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-lg bg-success text-white text-center">
          <div class="card-body d-flex flex-column justify-content-center align-items-center">
            <h5 class="card-title fw-bold mb-3">Custodians</h5>
            <a href="/custodians" class="btn btn-light">Manage ðŸ‘¥</a>
          </div>
        </div>
      </div>
    <% } %>
  </div>

<script>
    // Apply stored theme on load
    document.getElementById('darkModeToggle')?.addEventListener('change', function () {
    fetch('/toggle-dark-mode', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(res => res.json())
    .then(data => {
      if (data.success) {
        location.reload(); // Reload to apply the mode
      }
    });
  });
</script>

<%- include('../partials/footer') %>