<%- include('../partials/header') %>

<div class="container mt-4">
  <h2>‚ûï Add New Asset</h2>
  <form action="/asset/add" method="POST" enctype="multipart/form-data">

    <div class="accordion" id="assetFormAccordion">

      <!--  Device Details -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingDevice">
          <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#deviceDetails" aria-expanded="true" aria-controls="deviceDetails">
            üñ•Ô∏è Device Details
          </button>
        </h2>
        <div id="deviceDetails" class="accordion-collapse collapse show" aria-labelledby="headingDevice" data-bs-parent="#assetFormAccordion">
          <div class="accordion-body">

            <div class="mb-3">
              <label>Asset Name</label>
              <input type="text" name="name" class="form-control" required>
            </div>

            <div class="mb-3">
              <label>Device Class</label>
              <input type="text" name="deviceClass" class="form-control">
            </div>

            <div class="mb-3">
              <label>Owner</label>
              <input type="text" name="owner" class="form-control" required>
            </div>

            <div class="mb-3">
              <label>Description</label>
              <textarea name="description" class="form-control"><%= asset ? asset.description : '' %></textarea>
            </div>

            <div class="mb-3">
              <label>Upload Image</label>
              <input type="file" name="image" class="form-control">
            </div>

            <div class="mb-3">
              <label>Device Type</label>
              <select name="deviceType" class="form-control">
                <option>Laptop</option>
                <option>Desktop</option>
                <option>Printer</option>
                <option>Scanner</option>
                <option>Workstation</option>
                <option>Monitor</option>
                <option>Switch</option>
                <option>Other</option>
              </select>
            </div>

            <div class="mb-3">
              <label>If Other, Enter Device Type</label>
              <input type="text" name="otherDeviceType" class="form-control">
            </div>

            <div class="mb-3">
              <label>Make</label>
              <input type="text" name="make" class="form-control">
            </div>

            <div class="mb-3">
              <label>Model No</label>
              <input type="text" name="modelNo" class="form-control">
            </div>

            <div class="mb-3">
              <label>Serial No</label>
              <input type="text" name="serialNo" class="form-control">
            </div>

          </div>
        </div>
      </div>

      <!--  Custodian Details -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingCustodian">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#custodianDetails" aria-expanded="false" aria-controls="custodianDetails">
            üë§ Custodian Details
          </button>
        </h2>
        <div id="custodianDetails" class="accordion-collapse collapse" aria-labelledby="headingCustodian" data-bs-parent="#assetFormAccordion">
          <div class="accordion-body">

            <div class="mb-3">
              <label>Custodian Name</label>
              <input type="text" name="custodianName" class="form-control">
            </div>

            <div class="mb-3">
              <label>Designation</label>
              <input type="text" name="designation" class="form-control">
            </div>

            <div class="mb-3">
              <label>Employee ID</label>
              <input type="text" name="employeeId" class="form-control">
            </div>

            <div class="mb-3">
              <label>Department</label>
              <input type="text" name="department" class="form-control">
            </div>

          </div>
        </div>
      </div>

      <!--  Network Details -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingNetwork">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#networkDetails" aria-expanded="false" aria-controls="networkDetails">
            üåê Network Details
          </button>
        </h2>
        <div id="networkDetails" class="accordion-collapse collapse" aria-labelledby="headingNetwork" data-bs-parent="#assetFormAccordion">
          <div class="accordion-body">

            <div class="mb-3">
              <label>Operating System</label>
              <input type="text" name="operatingSystem" class="form-control">
            </div>

            <div class="mb-3">
              <label>IP User Name</label>
              <input type="text" name="ipUserName" class="form-control">
            </div>

            <div class="mb-3">
              <label>IP Address</label>
              <input type="text" name="ipAddress" class="form-control">
            </div>

            <div class="mb-3">
              <label>MAC Address</label>
              <input type="text" name="macAddress" class="form-control">
            </div>

          </div>
        </div>
      </div>

      <!--  Stock/Location Details -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingStock">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#stockDetails" aria-expanded="false" aria-controls="stockDetails">
            üì¶ Stock / Location Details
          </button>
        </h2>
        <div id="stockDetails" class="accordion-collapse collapse" aria-labelledby="headingStock" data-bs-parent="#assetFormAccordion">
          <div class="accordion-body">

            <div class="mb-3">
              <label>Location</label>
              <input type="text" name="location" class="form-control">
            </div>

            <div class="mb-3">
              <label>Stock No (NC/Fix)</label>
              <input type="text" name="stockNo" class="form-control">
            </div>

            <div class="mb-3">
              <label>Date of Purchase</label>
              <input type="date" name="purchaseDate" class="form-control">
            </div>

            <div class="mb-3">
              <label>Unique Tag No</label>
              <input type="text" name="uniqueTagNo" class="form-control" readonly value="AutoGenerated">
            </div>

          </div>
        </div>
      </div>

    </div>

    <div class="mt-4">
      <button type="submit" class="btn btn-primary"> Save Asset</button>
    </div>
  </form>
</div>

<%- include('../partials/footer') %>
